{% extends 'base.html.twig' %}

{% block title %}All posts!{% endblock %}

{% block body %}
<div>
    <b>wiadomość główna</b>
    <br>
<div>
    {% if posts|length > 0 %}
    {% for post in posts %}
        <br><a href="{{ path('app_social_show', { post: post.id }) }}"> {{ post.title }}</a></br>
   
    {% endfor %}
    {% else %}
    Tutaj nie ma nic
    {% endif %}
</div>


</div>
{% endblock %}
