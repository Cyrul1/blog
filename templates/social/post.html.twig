    <div class="mb-4">            <div class="text-2xl">
                <a href="{{ path('app_social_show', { post: post.id }) }}"> {{ post.title }}</a>
            </div>
                <div class="text-xl dark:text-gray-400">
                    {{ post.text }}
                </div>
                <div class="text-gray-500 dark:text-gray-400">
                    {{ post.created | date("M j, Y") }}
                </div>
                <div>
                {% if post.likedBy.contains(app.user)%}
                    <a href="{{ path('app_unlike', {id: post.id}) }}">
                        Nie lubie tego! <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count}}</span>
                    </a>
                {% else %}
                    <a href="{{ path('app_like', {id: post.id}) }}">
                        Lubie to! <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count}}</span>
                    </a>
                {% endif %}
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-300">
                    <a href="{{ path('app_proflie', { id: post.author.id }) }}">{{ post.author.email }}</a>
                </div>
                <div class="flex">
                    <a href="{{ path('app_social_edit', { post: post.id }) }}" class="mr-2">Edit</a>
                    <a href="{{ path('app_social_comment', { post: post.id }) }}">Komentarz <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.comments.count }}</span></a>
                </div>
        </div>